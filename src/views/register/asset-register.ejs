<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head') %>
        <title>
            <%= title %>
        </title>
</head>

<body>
    <%- include('../partials/navigation') %>
        <div class="container mt-5">
            <div class="card" style="border-radius: 15px;">
                <div class="card-header p-4 justify-content-center align-items-center">
                    <h3>Agregar activo fijo</h3>
                </div>
                <form action="/register/asset" method="post">
                    <div class="card-body">
                        <div class="row align-items-center m-2">
                            <div class="col-md-3">
                                <h6 class="mb-0">Nombre del activo</h6>
                            </div>
                            <div class="col-md-9">
                                <input type="text" name="new-asset-name" id="" class="form-control form-control-lg">
                            </div>
                        </div>
                        <div class="row align-items-center m-2">
                            <div class="col-md-3">
                                <h6 class="mb-0">Tipo de Activo</h6>
                            </div>
                            <div class="col-md-9">

                                <select class="form-select" aria-label="Default select example"
                                    name="new-asset-assetType">
                                    <option selected>Elija una opción</option>
                                    <% for( let i=0; i < assetType.length; i++ ) { %>
                                        <option value="<%= assetType[i] %> ">
                                            <%= assetType[i] %>
                                        </option>

                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="row align-items-center m-2">
                            <div class="col-md-3">
                                <h6 class="mb-0">Ubicación</h6>
                            </div>
                            <div class="col-md-9">

                                <select class="form-select" aria-label="Default select example" id="placesOptions"
                                    name="new-asset-location">
                                    <option selected>Elija una opción</option>
                                    <% for( let i=0; i < location.length; i++ ) { %>
                                        <option value="<%= location[i] %> ">
                                            <%= location[i] %>
                                        </option>

                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="row align-items-center m-2">
                            <div class="col-md-3">
                                <h6 class="mb-0">Encargado</h6>
                            </div>
                            <div class="col-md-9">

                                <select class="form-select" aria-label="Default select example"
                                    name="new-asset-userInCharge">
                                    <option selected>Elija una opción</option>
                                    <% for( let i=0; i < user.length; i++ ) { %>
                                        <option value="<%= user[i].username%> ">
                                            <%= user[i].username + ' | ' + user[i].name + ' ' + user[i].lastName %>
                                        </option>

                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="row align-items-center m-2">
                            <div class="col-md-3">
                                <h6 class="mb-0">Descripción</h6>
                            </div>
                            <div class="col-md-9">
                                <textarea name="new-asset-description" id="" cols="30" rows="5"
                                    class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <hr class="mx-n3">

                    <div class="px-5 py-4">
                        <button type="submit" class="btn btn-dark btn-lg">Registrar</button>
                    </div>
                </form>



            </div>

        </div>
</body>
<%- include('../partials/footer') %>

</html>