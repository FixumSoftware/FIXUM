<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head') %>
    <title> <%= title %></title>
    <script src="../js/jquery.js"></script>
    <script type="text/javascript" src="../js/jquery.dataTables.min.js"></script>
    <script src="../js/table.js"></script>
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.css">
</head>

<body>
    <%- include('../'+navBar) %>
        <div class="container mt-5 " style="border-radius: 15px ; flex-direction: column;">
            <div class="card" style="border-radius: 15px ; flex-direction: column;">
                <div class="card-header p-4 justify-content-center align-items-center">
                    <h3>Total Activos por Ubicacion</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tabla" class="table table-hover display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th scope="col">Ubicacion</th>
                                    <th scope="col">Cantidad Activos</th>
                                    <th scope="col">Total Avaluado</th>
                                
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i in totalAssetsByLocation[0]) { %>
                                    <tr>
                                        <th scope="row">
                                            <%= totalAssetsByLocation[0][i].locations %>
                                        </th>
                                        <td>
                                            <%= totalAssetsByLocation[0][i].Cantidad %>
                                        </td>
                                        <td>
                                            <%= '$'+totalAssetsByLocation[0][i].Total %>
                                        </td>
                                      
                                      
                                    </tr>

                                    <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</body>
<%- include('../partials/footer') %>

</html>