<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head') %>
        <title>
            <%= title %>
        </title>
</head>

<body>
    <%- include('../'+navBar) %>
        <div class="container mt-5 " style="border-radius: 15px ; flex-direction: column;">
            <div class="card" style="border-radius: 15px ; flex-direction: column;">
                <div class="card-header p-4 justify-content-center align-items-center">
                    <h3>Valor Total por Tipo Activo</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Tipo Activo</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Valor Total</th>
                                
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i in totalByAssetsTypes[0]) { %>
                                    <tr>
                                        <th scope="row">
                                            <%= totalByAssetsTypes[0][i].assetType %>
                                        </th>
                                        <td>
                                            <%= totalByAssetsTypes[0][i].Cantidad %>
                                        </td>
                                        <td>
                                            <%= '$'+totalByAssetsTypes[0][i].Total %>
                                        </td>
                                      
                                    </tr>

                                    <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</body>
<%- include('../partials/footer') %>

</html>