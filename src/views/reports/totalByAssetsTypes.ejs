<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head') %>
        <title>
            <%= title %>
        </title>
    <script src="../js/jquery.js"></script>
    <script type="text/javascript" src="../js/jquery.dataTables.min.js"></script>
    <script src="../js/table.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.css">
</head>

<body>
    <%- include('../'+navBar) %>
    <a href="/reports" style="color: white" class="btn btn-dark mx-5 mt-5 ">
        <div class="mx-2 my-0">
            <p class="my-0"><i class="fa-solid fa-arrow-left-long"></i> Reportes</p>
        </div>
    </a>
        <div class="container mt-5 " style="border-radius: 15px ; flex-direction: column;">
            <div class="card" style="border-radius: 15px ; flex-direction: column;">
                <div class="card-header p-4 justify-content-center align-items-center">
                    <h3>Valor Total por Tipo Activo</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tabla" class="table table-hover display" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th scope="col">Tipo Activo</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Valor Total</th>
                                
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i in totalByAssetsTypes[0]) { %>
                                    <tr>
                                        <th scope="row">
                                            <%= totalByAssetsTypes[0][i].assetType %>
                                        </th>
                                        <td>
                                            <%= totalByAssetsTypes[0][i].Cantidad %>
                                        </td>
                                        <td>
                                            <%= '$'+totalByAssetsTypes[0][i].Total %>
                                        </td>
                                      
                                    </tr>

                                    <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</body>
<%- include('../partials/footer') %>

</html>